<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetalleProductoActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/tv_nombre_detalle_prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de producto"
        android:textSize="30dp"/>
    <ImageView
        android:id="@+id/iv_producto_detalle_prod"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_detalle_prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="descripcion del producto"
        android:layout_margin="5dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tv_precio_detalle_prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$precio"
        android:layout_margin="5dp"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_restarProductos"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_remove_24"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_cantidadProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <ImageButton
            android:id="@+id/btn_sumarProductos"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_aceptar_detalle_prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AÃ±adir al carrito"
        android:layout_margin="5dp"/>
</LinearLayout>